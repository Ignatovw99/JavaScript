{{> header}}

<h1>Edit Offer</h1>
<p class="message"></p>
<form>
    <div>
        <input type="text" placeholder="Name..." name="name" value="{{offer.name}}">
    </div>
    <div>
        <input type="text" placeholder="Price..." name="price" value="{{offer.price}}">
    </div>
    <div>
        <input type="text" placeholder="Image url..." name="imageUrl" value="{{offer.imageUrl}}">
    </div>
    <div>
        <textarea placeholder="Give us some description about this offer..." name="description">{{offer.description}}</textarea>
    </div>
    <div>
        <input type="text" placeholder="Brand..." name="brand" value="{{offer.brand}}">
    </div>
    <div>
        <button>Edit</button>
    </div>
</form>

{{> footer}}